<%= form_with(model: @listing, local: true) do |form| %>
<div class="listing-code">
<%= form.text_area :listing_code, :size => "80x10", :class => "listing-code", :required => true %>
</div>
<div class="right-form">
<div class="creative-name">
  クリエイティブ名 :
  <%= form.text_field :creative_name, :required => true %><br><br>
  <button type="submit" name="button" class="btn btn-primary">保存</button>
</div>
<% end %>

