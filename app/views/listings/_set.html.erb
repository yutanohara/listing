<%= form_with(model: @listing, local: true, data: {remote: true}) do |form| %>
<div class="ad-setting">
  <div class="ad-name">
    <p>広告名</p>
    <%= form.text_field :ad_name %><br>
  </div>
  <div class="ad-parameter">
    <p>広告パラメータ</p>
    ?<%= form.text_field :ad_parameter %><br>
  </div>
  <div class="check-selector">
    <p>id/class</p>
    <%= radio_button 'selector', 'category', 'id', {} %>id<br>
    <%= radio_button 'selector', 'category', 'class', {}%>class<br>
  </div>
  <div class="ad-selector">
    <p>可変セレクター</p>
    <div class="select-input">
      <%= form.text_field :kahen_selector %><br>
    </div>
  </div>
  <div class="toggle-button">
    <p>On/Off</p>
    <div class="btn-group btn-toggle">
      <button class="btn btn-primary">ON</button>
      <button class="btn btn-default">OFF</button>
    </div>
  </div>
  <button type="submit" name="button" class="save-setting">保存</button>
</div>
<% end %>

<script type="text/javascript">
$('.btn-toggle').on('click', function () {
  $(this).find('.btn').toggleClass('active');
  if ($(this).find('.btn-primary').size() > 0) {
    $(this).find('.btn').toggleClass('btn-primary');
  }
  $(this).find('.btn').toggleClass('btn-default');
});
</script>
